extends layouts/main-layout.pug

block styles 
   link(rel="stylesheet", href="/css/main.css")
   link(rel="stylesheet", href="/css/forms.css") 
   link(rel="stylesheet", href="/css/product.css")

block content
    main 

    if prods.length > 0
       .grid
          each products in prods 
            article.card.product-item
                header.card__header
                  h1.product__title #{products.title}
                div.card__image
                    img(src="https://upload.wikimedia.org/wikipedia/commons/thumb/3/39/Book.svg/1200px-Book.svg.png " alt="A Book") 
                div.card__content
                    h2.product__price $19.99
                    p.product__description Some interesting book about someone history
                .card__actions
                    button.btn Add to Card
    else  
        h1.booddy No products here      
                       
                
