extends ../includes/head.pug

block styles 
   link(rel="stylesheet", href="/css/main.css")
   link(rel="stylesheet", href="/css/forms.css") 
   link(rel="stylesheet", href="/css/product.css")

block content
    main 

    if prods.length > 0
       .grid
          each products in prods 
            article.card.product-item
                header.card__header
                  h1.product__title #{products.title}
                div.card__image
                    img(src= products.imageUrl ,
                     alt #{products.title}) 
                div.card__content
                    h2.product__price $#{products.price}
                    p.product__description #{products.description}
                .card__actions
                  form(action="/add-to-cart" method="POST")
                    button.btn Add to Card
    else  
        h1.booddy No products here      
                       
                
